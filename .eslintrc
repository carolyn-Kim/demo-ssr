{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "vue"
    ],
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "globals": {
        "$": false
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "camelcase": [
            "error",
            {
                "properties": "never"
            }
        ],
        "no-unreachable": 2,
        "no-console": "off"
    }
}